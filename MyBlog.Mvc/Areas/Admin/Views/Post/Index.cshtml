@model MyBlog.Entities.Dtos.PostListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Paylaşımlar";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Paylaşımlar
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="postsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Küçük Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Aktif Mi?</th>
                        <th>Silinmiş Mi?</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kullanıcı Adı</th>
                        <th>Son Düzenlenme Tarihi</th>
                        <th>Son Düzenleyen Kullanıcı Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Küçük Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Aktif Mi?</th>
                        <th>Silinmiş Mi?</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kullanıcı Adı</th>
                        <th>Son Düzenlenme Tarihi</th>
                        <th>Son Düzenleyen Kullanıcı Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var post in Model.Posts)
                    {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Category.Name</td>
                        <td>@post.Title</td>
                        <td><img src="~/img/@post.Thumbnail" class="my-image-table" /></td>
                        <td>@post.Date.ToShortDateString()</td>
                        <td>@post.ViewCount</td>
                        <td>@post.CommentCount</td>
                        <td>@(post.IsActive ? "Evet" : "Hayır")</td>
                        <td>@(post.IsDeleted ? "Evet" : "Hayır")</td>
                        <td>@post.CreatedDate</td>
                        <td>@post.ModifiedDate.ToShortDateString()</td>
                        <td>@post.ModifiedByName</td>
                        <td>
                            <button class="btn btn-primary btn-sm btn-update" data-id="@post.Id"><span class="fas fa-edit"></span></button>
                            <button class="btn btn-danger btn-sm btn-delete" data-id="@post.Id"><span class="fas fa-minus-circle"></span></button>
                        </td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
