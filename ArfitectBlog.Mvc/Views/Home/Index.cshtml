@using System.Text.RegularExpressions
@model ArfitectBlog.Entities.Dtos.PostListDto
@{
    ViewBag.Title = "Anasayfa";
    Layout = "_Layout";
    Regex regex = new Regex("<[^>]*>");
}
<div class="col-md-8">

    <h1 class="my-4">
        Son Paylaşımlar
    </h1>

    @foreach (var post in Model.Posts)
    {
        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" src="~/img/@post.Thumbnail" alt="@post.Title">
            <div class="card-body">
                <h2 class="card-title">@post.Title</h2>
                <p class="card-text">
                    @{
                        post.Content = regex.Replace(post.Content, "");
                    }
                    @(post.Content.Length > 250 ? post.Content.Substring(0, 250) : post.Content)
                </p>
                <a asp-controller="Post" asp-action="Detail" asp-route-postId="@post.Id" class="btn btn-primary">Daha Fazla Oku &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                @post.User.UserName tarafından @post.Date tarihinde paylaşıldı.
            </div>
        </div>
    }


    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        @{
            @if (Model.ShowPrevious)
            {
                @if (Model.CategoryId != null)
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)" asp-route-categoryId="@Model.CategoryId.Value">Önceki</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-route-currentPage="@(Model.CurrentPage-1)">Önceki</a>
                    </li>
                }

            }
        }

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                @if (Model.CategoryId != null)
                {
                    <a class="page-link" asp-route-currentPage="@i" asp-route-categoryId="@Model.CategoryId.Value">@i</a>
                }
                else
                {
                    <a class="page-link" asp-route-currentPage="@i">@i</a>
                }
            </li>
        }


        @if (Model.ShowNext)
        {
            @if (Model.CategoryId != null)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)" asp-route-categoryId="@Model.CategoryId.Value">Sonraki</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)">Sonraki</a>
                </li>
            }

        }

    </ul>

</div>